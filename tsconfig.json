{
    "compileOnSave": true,
    "compilerOptions": {
        /* Basic Options */
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "./dist/",
        "rootDir": "./lib/",
        "composite": true,
        "removeComments": true,
        "sourceMap": true,

        /* Strict Type-Checking Options */
        "strict": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        

        /* Additional Checks */
        "esModuleInterop": true,
        "resolveJsonModule": true
    },

    "types": [
        "node"
    ]
}
